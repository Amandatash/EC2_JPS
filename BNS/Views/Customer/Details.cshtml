@model ViewCustomerViewModel
@inject UserManager<ApplicationUser> userManager;

@{
    ViewData["Title"] = "View Account Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<body style=" background-color:white;">

    <h1 style="text-align:center; color:darkred;">View User Details</h1>
    <hr style="height:3px; background-color:black;opacity:0.7" />

    <form method="post" class="mt-3">
        <div class="form-group row">
            <label asp-for="UserId" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="UserId" readonly class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Email" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Email" type="email" readonly class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="FirstName"></label>
            <div class="col-sm-10">
                <input asp-for="FirstName" readonly class="form-control text-center" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="LastName"></label>
            <div class="col-sm-10">
                <input asp-for="LastName" readonly class="form-control text-center" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Address"></label>
            <div class="col-sm-10">
                <textarea asp-for="Address" readonly class="form-control text-center" rows="3"></textarea>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="AccountNumber" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="AccountNumber" type="email" readonly class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="AccountHolder" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="AccountHolder" readonly class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="CardNumber" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="CardNumber" readonly class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="AccountType" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="AccountType" readonly class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Balance" class="control-label"></label>
            <div class="form-group">
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">$</span>
                    </div>
                    <input asp-for="Balance" readonly type="text" class="form-control" aria-label="Amount (to the nearest dollar)">
                    <div class="input-group-append">
                        <span class="input-group-text">.00</span>
                    </div>
                </div>
            </div>
        </div>
    </form>
</body>
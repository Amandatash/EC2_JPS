@{
    ViewData["Title"] = "Home Page";
}


<style>
    body, h1, h2, h3, h4, h5, h6 {
        font-family: "Lato", sans-serif
    }

    .w3-bar, h1, button {
        font-family: "Montserrat", sans-serif
    }

    .fa-anchor, .fa-coffee {
        font-size: 200px
    }

    table {
        font-family: arial, sans-serif;
        border-collapse: collapse;
        width: 100%;
    }

    td, th {
        border: 1px solid #dddddd;
        text-align: center;
        padding: 8px;
    }

    /* The hero image */
    .header {
        /* Use "linear-gradient" to add a darken background effect to the image*/
        background-image: url("'../images/BNS1.jpg");
        /* Set a specific height */
        height: 50%;
        /* Position and center the image to scale nicely on all screens */
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
        position: relative;
    }

    /* Adjust the size of the image */
    .header img {
        width: 100%; /* Set the image width to 100% */
        height: auto; /* Maintain aspect ratio */
        display: block;
    }

    /* Place text in the middle of the image */
    .header-text {
        text-align: center;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        color: white;
    }
</style>


    <!-- Header -->
    <div class="header">
        <img src="~/images/BNS1.png"/>
        <div class="header-text">
        <h1 class="w3-larger"><b>Every account has a story</b></h1>
            <p class="w3-large">Let Scotiabank help write yours.</p>
            <a class="w3-button w3-red w3-padding-large w3-large w3-margin-top" asp-area="" asp-controller="Account" asp-action="Login">Get Started</a>
        </div>
    </div>

    <!-- First Grid -->
    <div class="w3-row-padding w3-padding-64 w3-container">
        <div class="w3-content">
            <div class="w3-twothird">
                <h1>Our Exchange Rates</h1>
                

                <p class="w3-text-grey">
                    <table class="table table-hover text-white" style="background-color:darkred">
                        <tr>
                            <th>Currency</th>
                            <th>Sell</th>
                            <th>Buy(Cheque)</th>
                            <th>Buy(Cash)</th>
                        </tr>
                        <tr>
                            <td> <img src="~/images/USD.png" /> USD</td>
                            <td>155.00</td>
                            <td>147.00</td>
                            <td>133.50</td>
                        </tr>
                        <tr>
                            <td><img src="~/images/GBP.png" />GBP</td>
                            <td>203.60</td>
                            <td>198.50</td>
                            <td>195.00</td>
                        </tr>
                        <tr>
                            <td><img src="~/images/CAD.png" />CAD</td>
                            <td>124.90</td>
                            <td>120.40</td>
                            <td>117.40</td>
                        </tr>
                        <tr>
                            <td><img src="~/images/EUR.png" />EUR</td>
                            <td>171.20</td>
                            <td>164.40</td>
                            <td>161.40</td>
                        </tr>
                    </table>
                </p>
            </div>

            <div class="w3-third w3-center">
                <i class="fa fa-anchor w3-padding-64 w3-text-red"></i>
            </div>
        </div>
    </div>

    <!-- Second Grid -->
    <div class="w3-row-padding w3-padding-64 w3-container text-white" style="background-color:darkred">
        <div class="w3-content">
            <div class="w3-third w3-center" >
                
            </div>

            <div class="w3-twothird">

                <h1>Online Security Guarantee</h1>
               

                <p class="text-white">
                    We are serious about protecting your privacy and the security of your banking information. 
                    BNS uses advanced technology to protect the confidentiality of your financial activities 
                    while you are transacting business online.
                </p>
            </div>
        </div>
    </div>

    <div class="w3-container w3-center w3-padding-64 text-black" style="background-color:darkgray">
        <h1 class="w3-margin w3-xlarge">Discover what's possible.</h1>
    </div>
    <br/>
    <br/>
   
    




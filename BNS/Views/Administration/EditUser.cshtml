@model EditUserViewModel
@inject UserManager<ApplicationUser> userManager;

@{
    ViewData["Title"] = "Edit User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<body style=" background-color:white;">

    <h1 style="text-align:center; color:darkred;">Edit User</h1>
    <hr style="height:3px; background-color:black;opacity:0.7" />


    <form method="post" class="mt-3">
        <div class="form-group row">
            <label asp-for="Id" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Id" readonly="readonly" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="FirstName"></label>
            <div class="col-sm-10">
                <input asp-for="FirstName" class="form-control text-center" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="LastName"></label>
            <div class="col-sm-10">
                <input asp-for="LastName" class="form-control text-center" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Address"></label>
            <div class="col-sm-10">
                <textarea asp-for="Address" class="form-control text-center" rows="3"></textarea>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Email" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Email" type="email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="UserName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
        </div>

        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group row">
            <div class="col-sm-10">
                <input type="submit" value="Update" class="btn btn-primary" />
                <a asp-action="ListUsers" class="btn btn-danger">Cancel</a>
            </div>
        </div>

        <div class="card text-white" style="background-color:darkred">
            <div class="card-header">
                <h3>User Roles</h3>
            </div>
            <div class="card-body">
                @if (Model.Roles.Any())
                {
                    foreach (var role in Model.Roles)
                    {
                        <h5 class="card-title">@role</h5>
                    }
                }
                else
                {
                    <h5 class="card-title">None at the moment</h5>
                }
            </div>
        </div>
    </form>
</body>
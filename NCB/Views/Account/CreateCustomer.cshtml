@model NCB.ViewModels.CreateCutomerViewModel

@{
    ViewData["Title"] = "Register Customer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<body style=" background-color:lightgrey;">

    <h5 class="display-4  text-center"> Registration <i class="fa-solid fa-user"></i> </h5>

    <hr style="height:3px; background-color:black;opacity:0.7" />

    <div class="row">
        <div style="margin-left:250px;font-weight:bold;font-size:13px;color:darkred">Required Field * </div>
        <div class="col-md-7 font-weight-bold" style="margin-left:300px">

            <form method="post" id="form">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-row">
                    <div class="form-group col">
                        <label asp-for="FirstName"></label>
                        <input asp-for="FirstName" class="form-control text-center" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col">
                        <label asp-for="LastName"></label>
                        <input asp-for="LastName" class="form-control text-center" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Address"></label>
                    <textarea asp-for="Address" class="form-control text-center" rows="3"></textarea>
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control text-center" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>


                <div class="form-row">
                    <div class="form-group col">
                        <label asp-for="AccountType"></label>
                        <div class="form-check">
                            <label class="form-check-label">
                                <input asp-for="AccountType" type="radio" class="form-check-input text-center" value="Savings" />
                                Savings Account
                            </label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;

                            <label class="form-check-label">
                                <input asp-for="AccountType" type="radio" class="form-check-input text-center" value="Credit" />
                                Credit Card
                            </label>
                        </div>
                        <span asp-validation-for="AccountType" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col">
                        <label asp-for="Password"></label>
                        <input asp-for="Password" class="form-control text-center" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>


                    <div class="form-group col">
                        <label asp-for="ConfirmPassword"></label>
                        <input asp-for="ConfirmPassword" class="form-control text-center">
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

                    </div>


                </div>

                <button style="margin-left:220px" type="submit" id="btnsubmit" class="btn btn-lg btn-outline-success">Register <i class="fa-regular fa-circle-user fa-fade" style="--fa-animation-duration: 4s; --fa-fade-opacity: 0.45;"></i></button>

            </form>
        </div>
    </div>
</body>
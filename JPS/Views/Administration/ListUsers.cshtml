@model IEnumerable<IdentityUser>

 
@{
    ViewBag.Title = "All Roles";
}

<h1 style="font-family: Times New Roman; text-align:center">All Users</h1>

@if (Model.Any()) //if there are any users in the model
{
    <a asp-action="Register" asp-controller="Account" class="btn btn-success mb-3" style="width:auto; font-family: Times New Roman;">
        + Add new user
    </a>

    foreach (var user in Model) //displaying user and their details
    {
        <div class="card mb-3">
            <div class="card-header" style="font-family: Times New Roman;">
                <strong>User Id:</strong> @user.Id
            </div>

            <div class="card-body">
                <h5 class="card-title" style="font-family: Times New Roman;">
                    @user.UserName
                </h5>
            </div>

            <div class="card-footer">
                <form method="post" asp-action="DeleteUser" asp-route-id="@user.Id">
                    <a asp-action="EditUser" asp-controller="Administration" asp-route-id="@user.Id" class="btn btn-primary">Edit</a>
                    <button type="submit" class="btn btn-danger" onclick="return confirm ('Are you sure you want to delete user: @user.UserName')">Delete</button>
                </form>
            </div>

        </div>
    }
}
else
{
    <div class="card" style="font-family: Times New Roman;">
        <div class="card-header">
            No users created yet
        </div>

        <div class="card-body">
            <h5 class="card-title" style="font-family: Times New Roman;">
                Use the button below to create a user
            </h5>

            <a class="btn btn-success" style="width:auto" asp-controller="Account" asp-action="Register">
                Add new user
            </a>
        </div>
    </div>
}

@*define the content for the script section*@
@section Scripts{
    <script src="~/js/CustomScript.js"></script>
}

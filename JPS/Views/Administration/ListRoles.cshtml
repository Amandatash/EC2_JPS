@model IEnumerable<IdentityRole>

@{
    ViewData["Title"] = "All Rules";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 style="font-family: Times New Roman; text-align:center">All Roles</h1>

@if (Model.Any()) //if roles are created
{

    <a class="btn btn-success mb-3" style="width:auto" asp-action="CreateRole" asp-controller="Administration">+ Add new role</a>

    foreach (var role in Model)
    {
        <div class="card mb-3">
            <div class="card-header" style="font-family: Times New Roman;">
                <strong>Role Id:</strong> @role.Id 
            </div>

            <div class="card-body" style="font-family: Times New Roman;">
                <h5 class="card-title"><strong>@role.Name</strong></h5>
            </div>

            <div class="card-footer">
                <form method="post" asp-action="DeleteRole" asp-route-id="@role.Id">
                    <a asp-action="EditRole" asp-controller="Administration" asp-route-id="@role.Id" class="btn btn-primary">Edit</a>
                    <button type="submit" class="btn btn-danger" onclick="return confirm ('Are you sure you want to delete role: @role.Name')">Delete</button>
                </form>
            </div>
        </div>
    }
}
else
{
    <div class="card">
        <div class="card-header" style="font-family: Times New Roman;">
            No roles are created as yet.
        </div>

        <div class="card-body" style="font-family: Times New Roman;">
            <h5>
                Use the button below to create a role.
            </h5>

            <a class="btn btn-success" style="width:auto" asp-controller="Administration" asp-action="CreateRole">Create Role</a>
        </div>
    </div>
}
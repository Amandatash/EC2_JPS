@model JPS.Models.Bill

@{ ViewData["Title"] = "Details";
                Layout = "~/Views/Shared/_Layout.cshtml"; }

<h1 style="font-family: Times New Roman; text-align:center">Details on:</h1>

<h5 style="font-family: Times New Roman; text-align: center">
    @Html.DisplayNameFor(model => model.CustomerId): @Html.DisplayFor(model => model.CustomerId)
    <br />
    @Html.DisplayNameFor(model => model.PremisesNumber): @Html.DisplayFor(model => model.PremisesNumber)
</h5>

<div>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.GenerationDate):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GenerationDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DueDate):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DueDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PremisesNumber):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PremisesNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CustomerId):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CustomerId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Address):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AmountDue):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AmountDue)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.BillId"><input type="button" value="Edit" class="btn btn-success" /></a>
    <a asp-action="Index"><input type="button" value="Back to List" class="btn btn-primary" /></a>
</div>
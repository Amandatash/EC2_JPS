@model JPS.Models.Bill

@{ ViewData["Title"] = "Delete";
                Layout = "~/Views/Shared/_Layout.cshtml"; }

<div style="font-family: Times New Roman; text-align:center">
    <h1 style="font-family: Times New Roman">Delete Bill</h1>

    <h5>
        Are you sure you want to delete: @Html.DisplayNameFor(model => model.CustomerId): "@Html.DisplayFor(model => model.CustomerId)"
        &nbsp;
        @Html.DisplayNameFor(model => model.PremisesNumber): "@Html.DisplayFor(model => model.PremisesNumber)"?
    </h5>
</div>

<div>
    <hr/>

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.GenerationDate):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GenerationDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DueDate):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DueDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PremisesNumber):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PremisesNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CustomerId):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CustomerId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Address):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AmountDue):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AmountDue)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="BillId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        <a asp-action="Index"><input type="button" value="Back to List" class="btn btn-primary" /></a>
    </form>
</div>
